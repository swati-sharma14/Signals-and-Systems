import matplotlib.pyplot as plot
import numpy as np
import math

def u(n):
    if(n>=0):
        return 1
    else:
        return 0

def value(n):
    z= u(n) - u(n-10)
    return z

def evenvalue(n):
    z= (value(n) + value(-n))/2
    return z

def oddvalue(n):
    z= (value(n) - value(-n))/2
    return z

plot.subplots(3,1,constrained_layout=True)

xaxis = range(-20,21,1)
yaxis = []
evenyaxis = []
oddyaxis = []

for n in xaxis:
    yaxis.append(value(n))
    evenyaxis.append(evenvalue(n))
    oddyaxis.append(oddvalue(n))

plot.subplot(3,1,1)
plot.ylabel('z[n]')
plot.xlabel('n')
plot.stem(xaxis,yaxis)

plot.subplot(3,1,2)
plot.ylabel('even part of z[n]')
plot.xlabel('n')
plot.stem(xaxis,evenyaxis)

plot.subplot(3,1,3)
plot.ylabel('odd part of z[n]')
plot.xlabel('n')
plot.stem(xaxis,oddyaxis)


plot.show()
